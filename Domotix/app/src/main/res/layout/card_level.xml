<?xml version="1.0" encoding="utf-8"?>
<android.gesture.GestureOverlayView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gestures"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:eventsInterceptionEnabled="true"
    android:gestureColor="@android:color/holo_blue_dark"
    android:gestureStrokeType="multiple"
    android:orientation="vertical"
    android:uncertainGestureColor="@android:color/holo_red_dark" >

    <ViewFlipper
        android:id="@+id/swapDeviceLevelViewFlipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:paddingTop="20.0dip" >

        <eu.pochet.domotix.SwapDeviceLevelView
            android:id="@+id/swapDeviceLevelView0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/level_1" />

        <eu.pochet.domotix.SwapDeviceLevelView
            android:id="@+id/swapDeviceLevelView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/level_2" />

        <eu.pochet.domotix.SwapDeviceLevelView
            android:id="@+id/swapDeviceLevelView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/level_3" />

        <eu.pochet.domotix.SwapDeviceLevelView
            android:id="@+id/swapDeviceLevelView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/level_3" />
    </ViewFlipper>

</android.gesture.GestureOverlayView>