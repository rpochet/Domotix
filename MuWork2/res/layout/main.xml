    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	
    <Spinner android:id="@+id/month"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/month_prompt"
    />
    
	<ListView android:id="@+id/days" 
