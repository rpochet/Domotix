<?xml version="1.0"?>
<device>
    <developer id="1000">Pochet Romuald</developer>
    <product id="1002">DomotixLightSwitch</product>
    <version>
        <hardWare>00000100</hardWare>
        <softWare>00000100</softWare>
    </version>
    <pwrdownmode>false</pwrdownmode>
    <config>
        <reg name="sensor" id="0B">
            <param name="delay" type="num">
                <position>2.0</position>
                <size>2.0</size>
            </param>
        </reg>
    </config>
    <regular>
        <reg name="sensor" id="0C">
            <endpoint name="temperature" type="num" dir="inp">
                <size>4.0</size>
                <units>
                    <unit name="°C" factor="1" offset="0"/>
                </units>
            </endpoint>
        </reg>
    </regular>
</device>
